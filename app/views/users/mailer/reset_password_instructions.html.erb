<!doctype html>
<html>
  <head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title><%= t("devise.mailer.reset_password_instructions.title") %></title>
    <link rel="stylesheet" href="<%= ENV["API_URL"] %>/assets/mail.css">
  </head>
  <body class="">
    <table border="0" cellpadding="0" cellspacing="0" class="body">
      <tr>
        <td>&nbsp;</td>
        <td class="container">
          <div class="content">

            <!-- START CENTERED WHITE CONTAINER -->
            <span class="preheader"><%= t("devise.mailer.reset_password_instructions.preheader") %></span>
            <table class="main">

              <!-- START MAIN CONTENT AREA -->
              <tr>
                <td class="wrapper">
                  <table border="0" cellpadding="0" cellspacing="0">
                    <tr>
                      <td>
                        <p><%= t("devise.mailer.shared.hi_there", name: @resource.profile&.full_name) %>,</p>
                        <p><%= t("devise.mailer.reset_password_instructions.someone_requested") %></p>
                        <table border="0" cellpadding="0" cellspacing="0" class="btn btn-primary">
                          <tbody>
                            <tr>
                              <td align="left">
                                <table border="0" cellpadding="0" cellspacing="0">
                                  <tbody>
                                    <tr>
                                      <td> <a href="<%= "#{@resource.settings['last_reset_password_base_url'] || Rails.application.credentials.uri[ENV["RAILS_ENV"].to_sym][:client]}/auth/reset-password/#{@token}" %>" target="_blank">
                                        <%= t("devise.mailer.reset_password_instructions.reset_password") %>
                                      </a> </td>
                                    </tr>
                                  </tbody>
                                </table>
                              </td>
                            </tr>
                          </tbody>
                        </table>
                        <p><%= t("devise.mailer.reset_password_instructions.ignore_email") %></p>
                        <p><%= t("devise.mailer.reset_password_instructions.info") %></p>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>

            <!-- END MAIN CONTENT AREA -->
            </table>

            <!-- START FOOTER -->
            <div class="footer">
              <table border="0" cellpadding="0" cellspacing="0">
                <tr>
                  <td class="content-block">
                    <span class="apple-link">Get Covered LLC,</span>
                  </td>
                </tr>
              </table>
            </div>
            <!-- END FOOTER -->

          <!-- END CENTERED WHITE CONTAINER -->
          </div>
        </td>
        <td>&nbsp;</td>
      </tr>
    </table>
  </body>
</html>
