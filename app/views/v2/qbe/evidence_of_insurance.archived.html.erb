      .coverage_main_blk {border: 1px solid #000;margin: 0 0 10px 0}
      .coverage_in {width: 60%}
      .amount_in {width: 20%}
      .deduct_in {width: 20%}
      .coverage_in h4 {text-align: center;border-right: 1px solid #000;padding: 0 0 3px 0;border-bottom: 1px solid #000}
      .amount_in h4 {text-align: center;border-right: 1px solid #000;padding: 0 0 3px 0;border-bottom: 1px solid #000;}
      .deduct_in h4 {text-align: center;padding: 0 0 3px 0;border-bottom: 1px solid #000}
      .coverage_in h2 {border-bottom: 1px solid #000;border-right: 1px solid #000; padding: 0 0 2px 10px;font-weight: normal}
      .last_br_btm {border-bottom: none !important}
      .last_br_rt {border-right: none !important}
      .amount_in h2 {border-bottom: 1px solid #000;border-right: 1px solid #000;font-weight: normal;padding: 0 5px 2px 0;text-align: right}
      .deduct_in h2 {border-bottom: 1px solid #000;border-right: 1px solid #000;font-weight: normal;padding: 0 5px 2px 0;text-align: right}
      
      .remarks_head span {}
      .premium_in {border: 1px solid #000;padding: 1px 0 5px 3px;margin: 0 0 3px 0;}
      .premium_in h2 {font-weight: normal}
      .cancel_in {border: 1px solid #000;padding: 1px 0 0 3px;margin: 0 0 3px 0}
      .add_main_blk {border: 1px solid #000;margin: 0 0 96px 0}
      .name_left {width: 50%;padding: 0 0 0 3px;}
      .sign_blk {width: 50%;border-left: 1px solid #000}
      .close h2 {font-weight: normal;padding: 2px 0 3px 4px;}
      .pm_in h3 {font-weight: normal;padding: 1px 0 0px 3px;}
      .close {border-right: 1px solid #000;width: 6%;}
      .pm_in {width: 44%}
      .emp1 {width: 6%;border-left: 1px solid #000;border-right: 1px solid #000}
      .emp2 {width: 44%}
      .last_loan {border-bottom: 1px solid #000;padding: 0 0 3px 2px;border-top: 1px solid #000 }
      .auth figure img {margin: 2px 69px}
      .auth h4 {padding: 0 0 0 3px}
      .acord_text p {display: inline-block;font-size: 8.04px;font-weight: 700;width: 50%;float: left}
      .copy_right p {display: inline-block;font-size: 8.04px;font-weight: 700;width: 50%;float: left;text-align: right}
      .footer_cont p {font-size: 8.04px;text-align: center;font-weight: 700}
      footer {padding: 0 0 36px 0}
      
      /* -------Don't Remove this---------------*/
      input[type="text"], input[type="password"], input[type="datetime"], input[type="datetime-local"], input[type="date"], input[type="month"], input[type="time"], input[type="week"], input[type="number"], input[type="email"], input[type="url"], input[type="search"], input[type="tel"], input[type="color"], textarea, button, select {
          -webkit-appearance: none; /*Safari/Chrome*/
