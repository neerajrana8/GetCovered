      /*-----------LayOut Start here-----------------------*/
      .wrapper									{width: 612px; margin:0 auto;}
      .container									{width:552px; margin:0 auto;}
      
      .head_section {padding: 10px 0 0 0}
      .logo {width: 453px;float: left}
      .logo a {float: left}
      .logo h1 {font-size: 14.04px;line-height: 16.04px;font-weight: 700;text-align: center;padding: 12px 0 0 0;}
      .date_sec {width: 99px;border: 1px solid #000;float: left;text-align: center;padding: 10px 0 8px 0}
      .date_sec h4 {font-weight: 700;}
      .date_sec h3 {font-weight: 400}
      .evid_main_blk {border: 1px solid #000;margin: 0 0 10px 0}
      .para_1 p {font-size: 7.91px;line-height: 9.91px;font-weight: 700;padding: 1px 3px}
      .para_1 {border-bottom: 1px solid #000;}
      .agency_main {width: 50%}
      .agency_left {width: 93px;padding: 2px 3px 2px 3px;}
      .agency_right {width: 182px;border: 1px solid
      #000;border-top: none;border-right: none;padding: 1px 0 0 3px;}
      .agency_right h4 {font-weight: 700;}
      .agency_right h4 span {font-size: 5.11px;font-weight: 700}
      .agency_right h2 {font-weight: normal;}
      .agency_left h4 {font-weight: 700;padding: 0 0 10px 0}
      .agency_left h2 {font-weight: normal;padding: 0 0 0 5px;}
      .agency_left address {font-size: 8.04px;color: #000;padding: 0 0 0 5px}
      .fax_in h4 {font-weight: 700;}
      .fax_in h4 span {font-size: 8.01px;font-weight: normal;padding: 0 0 0 3px;}
      .fax_in {border-bottom: 1px solid #000;border-top: 1px solid #000;padding: 1px 3px;}
      .code_in .code {width: 35%;padding: 1px 0 1px 3px;}
      .code_in .sub_code {width: 65%}
