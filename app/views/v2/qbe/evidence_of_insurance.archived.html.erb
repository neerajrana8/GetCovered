      .insured_in h4, .name_left h4 {font-weight: 700; padding: 0 0 10px 0}
      .insured_in address, .name_left address {color: #000;font-size: 8.04px;font-weight: normal;padding: 0 0 0 5px}
      .insured_in h2, .name_left h2 {font-weight: normal;padding: 0 0 0 5px;}
      .insured_in {padding: 0 0 15px 3px;}
      .company_main {width: 50%;border-left: 1px solid #000}
      .comp_in {padding: 0 0 0px 3px;border-bottom: 1px solid #000;}
      .comp_in h4 {font-weight: 700;padding: 0 0 6px 0;}
      .comp_in address {font-weight: normal;font-size: 8.04px;color: #000;padding: 0 0 8px 20px;}
      .comp_in h2 {padding: 0 0 8px 0;font-weight: normal;}
      .loan_left {width: 50%;padding: 1px 0 0 3px;}
      .loan_right {width: 50%;padding: 1px 0 0 0}
