      .prior {border-bottom: 1px solid #000;padding: 1px 0 0 3px;}
      .empty {border-left: 0.5px solid #000;font-size: 10px;line-height: 12px}
      .property_main_blk {border: 1px solid #000;margin: 0 0 10px 0}
      .prop_loca address {font-size: 8.04px;color: #000;padding: 0 0 0 5px}
      .prop_loca h4 {padding: 0 0 10px 0}
